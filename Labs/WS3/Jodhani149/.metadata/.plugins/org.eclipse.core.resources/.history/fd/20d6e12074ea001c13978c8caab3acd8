package Task1;

class Triangle extends GeometricObject 
{
    public double side1 = 1.0;
    public double side2 = 1.0;
    public double side3 = 1.0;

    public Triangle() { }

    public Triangle(double s1, double s2, double side3) 
    {
        this.side1 = s1;
        this.side2 = s2;
        this.side3 = side3;
    }

    public double getS1() 
    {
        return side1;
    }
    
    public double getS2() 
    {
        return side2;
    }
    
    public double getS3() 
    {
        return side3;
    }

    public void setS1(double side1) 
    {
        this.side1 = side1;
    }
    
    public void setS2(double side2) 
    {
        this.side2 = side2;
    }
    
    public void setS3(double side3)  
    {
        this.side3 = side3;
    }

    @Override
    public double getArea() 
    {
        double s = (side1 + side2 + side3) / 2.0;
		double finalarea = Math.pow(s * (s - side1) * (s - side2) * (s - side3), 0.5);
        return finalarea;
    }

    @Override
    public double getPerimeter() 
    {
		double total = side1 + side2 + side3;
        return total;
    }
	
	@Override
    public String toString() 
	{
        return "Triangle { " + "All sides of triangle: " + side1 + ", " + side2 + ", " + side3 + " }";
    }    
}
